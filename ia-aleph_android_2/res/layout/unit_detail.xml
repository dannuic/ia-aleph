<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unitDetailView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- xmlns:app="http://schemas.android.com/apk/res/it.anyplace.alephtoolbox2" -->

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        grid:columnCount="3" >

        <ImageView
            android:id="@+id/unitDetailImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitCenter"
            android:padding="3dp"
            grid:layout_column="0"
            grid:layout_gravity="center"
            grid:layout_row="0"
            grid:layout_rowSpan="5" />

        <TextView
            android:id="@+id/unitDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            grid:layout_column="1"
            grid:layout_gravity="left"
            grid:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/unitDetailCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            grid:layout_column="1"
            grid:layout_gravity="left"
            grid:layout_row="1" />

        <TextView
            android:id="@+id/unitDetailCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            grid:layout_column="1"
            grid:layout_gravity="left"
            grid:layout_row="2" />

        <TextView
            android:id="@+id/unitDetailType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            grid:layout_column="1"
            grid:layout_gravity="left"
            grid:layout_row="3" />

        <TextView
            android:id="@+id/unitDetailSwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            grid:layout_column="1"
            grid:layout_gravity="left"
            grid:layout_row="4" />

        <include
            grid:layout_column="2"
            grid:layout_row="0" 
            grid:layout_rowSpan="5"
    		grid:layout_gravity="fill_horizontal"
            layout="@layout/unit_detail_specs" />
    </android.support.v7.widget.GridLayout>

    <ListView
        android:id="@+id/unitDetailChildsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:choiceMode="singleChoice" >
    </ListView>

</LinearLayout>